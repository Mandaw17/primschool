{% extends "base.html.twig" %}

{% block body %}
    <a href="/profilsEleves/{{eleve.id}}" class="btn btn-outline-success">Retour</a>
    <center>
        <h1>Plaintes</h1>
    </center>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Libelle</th>
                <th>Commentaire</th>
            </tr>
        </thead>
        <tbody>
            {% for plainte in plaintes %}
                {% if eleve.id is same as(plainte.eleve.id) %}
                    <tr>
                        <td>{{plainte.id}}</td>
                        <td>{{plainte.lib}}</td>
                        <td>{{plainte.commentaire}}</td>
                    </tr>
                {% endif %}        
            {% endfor %}
        </tbody>
    </table>
    <a href="/addPlainte/{{eleve.id}}" class="btn btn-outline-success">Nouvelle Plainte</a>
{% endblock %}