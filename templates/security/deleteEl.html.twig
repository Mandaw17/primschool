{% extends "base.html.twig" %}

{% block body %}   
    {% if app.user %}
        {% if app.user.role is same as('directeur') %}
            <center>
                <h3>Vous allez supprimer l'eleve {{eleve.prenom}} {{eleve.nom}} {{eleve.id}}<h3>
                <h2>En êtes-vous sûr ?</h2>
                <a href="/deleteEleve/{{eleve.id}}" class="btn btn-danger">supprimer</a> <a href="/classe/{{eleve.classeIn.id}}" class="btn btn-success">Annuler</a>
            </center>
        {% else %}
                <a href="/classe/{{eleve.classeIn.id}}" class="btn btn-outline-primary">Retour</a>
        {% endif %}
    {% else %}
        <a href="/" class="btn btn-outline-primary">Retour</a>    
    {% endif %}
    
{% endblock %}