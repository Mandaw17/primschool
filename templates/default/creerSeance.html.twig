{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
         {% if app.user %}
            {% if app.user.role is same as('directeur') %}
                <div class="container">
                    <h2 class="page-header">Affecter Matiere</h2>
                    {{form_start(form)}}
                    {{form_widget(form)}}
                    {{form_end(form)}}
                </div>
            {% else %}
                <a href="/listeClasses" class="btn btn-outline-primary">Retour</a>
            {% endif %}
        {% else %}
            <a href="/" class="btn btn-outline-primary">Retour</a>
        {% endif %}
    </div>
{% endblock %}